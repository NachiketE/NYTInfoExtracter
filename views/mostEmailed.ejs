<%- include('home') %>

<h1 class="text-center mt-3 mb-4">Most Emailed Articles</h1>
<div class="container">
    <div class="row">
        <% articles.forEach(article => { %>
            <div class="col-lg-4 col-md-6 col-sm-12">  
                <div class="card">
                    <% if (article.media && article.media[0] && article.media[0]['media-metadata'] && article.media[0]['media-metadata'][0] && article.media[0]['media-metadata'][0].url) { %>
                        <img class="card-img-top" src="<%= article.media[0]['media-metadata'][0].url %>" alt="Card image cap">
                    <% } else { %>
                        <img class="card-img-top" src="https://as2.ftcdn.net/v2/jpg/00/82/35/99/1000_F_82359910_L1SQ8T2W6qh57sD0N0nnWho1e2Zh6AUH.jpg" alt="Default Image">
                    <% } %>
                    <div class="card-body">
                        <h5 class="card-title"><a href="<%= article.url %>"><%= article.title %></a></h5>
                        <p class="card-text"><strong>By:</strong> <%= article.byline %></p>
                        <p class="card-text"><strong>Published Date:</strong> <%= article.published_date %></p>
                        <p class="card-text"><%= article.abstract %></p>
                    </div>
                    <div class="card-footer">
                        <strong>Section:</strong> <%= article.section %>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
