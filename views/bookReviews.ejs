<%- include('home') %>

<div class="container">
    <h1 class="text-center mt-5 mb-4">Book Reviews</h1>
    <% if (bookReviews.length > 0) { %>
    <div class="row justify-content-center">
        <% bookReviews.forEach(book => { %>
        <div class="col-md-8 mb-4">
            <div class="card">
                <div class="card-header">
                    Book Details
                </div>
                <div class="card-body">
                    <p><strong>Title:</strong> <%= book.book_title %></p>
                    <p><strong>Author:</strong> <%= book.book_author %></p>
                    <p><strong>Publication Date:</strong> <%= book.publication_dt %></p>
                    <p><strong>Summary:</strong> <%= book.summary %></p>
                    <p><strong>Byline:</strong> <%= book.byline %></p>
                    <p><strong>ISBN-13:</strong> <%= book.isbn13[0] %></p>
                </div>
                <div class="card-footer">
                    <a href="<%= book.url %>" class="btn btn-dark" target="_blank">Read Review</a>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
    <% } else { %>
        <div class="row justify-content-center">No book reviews found for your search, please try again!</div>
    <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
